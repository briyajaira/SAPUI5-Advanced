<mvc:View
    controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content> 
                       <HBox id="HBoxEmployee">
                            <Label id="labelEmployee" labelFor="inputEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" value="{jsonCountries>/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd" />
                            <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="true"/>
                            <Select id="slCountry" selectedKey="{jsonCountries>/CountryKey}" forceSelection="false" items="{jsonCountries>/ListCountry}" visible="true">
                                <items> 
                                    <core:Item id="itemCountry" key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
                       </HBox>

                       <HBox id="hBoxTable">
                       <Panel id="panelTable" >
                            <Button id="btnShowCity" text="{i18n>showCity}" visible="{jsonModelConfig>/visibleBtnShowCity}" press="onShowCity" />
                            <Button id="btnHideCity" text="{i18n>hideCity}" visible="{jsonModelConfig>/visibleBtnHideCity}" press="onHideCity" />     
 
                            <Table id="tableEmployee" items="{jsonEmployees>/}">
                                <columns>
                                    <Column id="colId" visible="{jsonModelConfig>/visibleID}">
                                        <header>
                                            <Label id="labelId" text="{i18n>tableId}"/>
                                        </header>
                                    </Column>
                                    <Column id="colName" visible="{jsonModelConfig>/visibleName}">
                                        <header>
                                            <Label id="labelName" text="{i18n>name}"/>
                                        </header>
                                    </Column>
                                    <Column id="colCountry" visible="{jsonModelConfig>/visibleCountry}">
                                        <header>
                                            <Label id="labelCount" text="{i18n>country}"/>
                                        </header>
                                    </Column>
                                    <Column id="colCity" visible="{jsonModelConfig>/visibleCity}">
                                        <header>
                                            <Label id="labelCity" text="{i18n>city}"/>
                                        </header>
                                    </Column>                                    
                                </columns>
                                <items>
                                    <ColumnListItem id="colL" type="Active" press="showPostalCode">
                                        <cells>
                                            <Label id="labelCid" text="{jsonEmployees>EmployeeID}"/>
                                            <Label id="labelCNam" text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                                            <Label id="labelCCount" text="{jsonEmployees>Country}"/>
                                            <Label id="labelCCity" text="{jsonEmployees>City}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </Panel>
                       </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>